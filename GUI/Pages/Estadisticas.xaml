<Page x:Class="GUI.Pages.Estadisticas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI.Pages"
      mc:Ignorable="d" 
      Height="700" Width="1340"
      Title="Estadisticas">

    <ScrollViewer>
        <Grid>
            <Border Background="#cba8cd" CornerRadius="14" Height="300" Width="300" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,10,200,0">
                <Grid>
                    <local:GraficaProducto Margin="20"/>
                </Grid>
            </Border>

            <Border Background="#cba8cd" CornerRadius="14" Height="300" Width="300" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="200,10,0,0">
                <Grid>
                    <local:GraficaIngresos Margin="20" Padding="10"/>
                </Grid>
            </Border>

            <Border Background="#cba8cd" CornerRadius="14" Height="600" Width="1000" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,340,0,40">
                <Grid>
                    <local:GraficaFacturas Margin="20"/>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
